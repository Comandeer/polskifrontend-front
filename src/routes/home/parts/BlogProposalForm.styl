@import "../../../styles/globals.styl"
@import "../../../styles/variables.styl"
@import "../../../styles/colors.styl"

.container
  width 100%
  height 350px
  position relative
  background-image url('../../../../public/blog-proposal-background.jpg')
  background-size cover
  text-align center
  display table

  &__green
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background $color-tertiary
    opacity 0.8

  .wrapper
    position relative
    display table-cell
    vertical-align middle
    text-shadow 1px 1px $color-primary

    &__title
      font-size 2.2em
      font-weight bold
      font-family $font-header
      color $color-secondary
      margin 0 0 32px

    &__description
      font-size 1.4em
      color $color-secondary
      margin 0 0 32px

    .form
      width 100%
      font-size 1.2em
      &__input
        border-radius 5px 0 0 5px
        width 80%
        max-width 450px
        transition box-shadow 0.2s

        &--invalid
          border 1px solid $color-primary
          box-shadow 0 0 6px 0 $color-primary

      &__button
        font-family $font-header
        color $color-secondary
        background $color-primary
        border 1px solid $color-primary
        border-radius 0 5px 5px 0
        padding 10px 25px
        transition color 0.2s

        &:hover
          color darken($color-secondary, 10%)

    &__error
      visibility hidden
      opacity 0
      color $color-primary
      position absolute
      width 100%
      text-align center
      font-size 1.3em
      font-family $font-header
      text-shadow none
      padding-top $global-padding
      transition opacity 0.2s, visibility 0.2s

      &--invalid
        visibility visible
        opacity 1
