@import "../../../styles/globals.styl"
@import "../../../styles/variables.styl"
@import "../../../styles/colors.styl"

.container
  width 100%
  height 270px
  display table
  position relative
  text-align center
  background-image url('../../../../public/lead_background-min.jpg')
  background-size cover
  background-position center
  padding $global-padding * 1.5

  &__green
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background $color-tertiary
    opacity 0.85
    box-shadow 0 0 8px 1px lighten($color-primary, 20%)

  .wrapper
    position relative
    display table-cell
    vertical-align middle
    text-shadow 1px 1px lighten($color-primary, 40%)

    &__title
      font-size 2.2em
      font-weight bold
      font-family $font-header
      color $color-secondary
      margin 0 0 32px

      @media screen and (min-width: 768px)
        font-size 3.2em

    &__description
      font-size 1.3em
      color $color-secondary
      margin 0

      @media screen and (min-width: 768px)
        font-size 1.8em
