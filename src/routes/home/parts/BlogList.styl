@import "../../../styles/globals.styl"
@import "../../../styles/variables.styl"
@import "../../../styles/colors.styl"

.clear
  clear both

.container
  padding 0 $global-padding $global-margin
  background transparent

  @media screen and (min-width: 768px)
    padding 0 0 $global-margin

  .item
    border-left 4px solid lighten($color-primary, 60%)
    padding $global-margin
    margin $global-margin * 1.5 0 $global-margin
    text-align left
    transition border-bottom $animation-time, border-left $animation-time
    position relative
    background $color-secondary
    box-shadow 1px 1px 6px 1px lighten($color-primary, 80%)
    border-radius $global-radius

    &--today
      border-left 4px solid $color-oposite

    &--clicked
      border-left 4px solid lighten($color-primary, 60%)

    &__new
      background $color-oposite
      color $color-secondary
      display none
      border-radius $global-radius
      font-weight normal
      font-size 12px
      vertical-align text-bottom
      transition background $animation-time
      text-align center

      &--visible
        display block
        margin-bottom $global-padding
        padding $global-padding

        @media screen and (min-width: 768px)
          display inline-block
          margin-right $global-padding
          margin-bottom 0
          padding 5px $global-padding

      &--clicked
        background $color-tertiary

    .article
      width 100%

      &__header
        display inline-block
        max-width 100%
        margin 0 0 $global-padding
        text-decoration none
        font-size 20px
        font-weight bold
        font-family $font-header
        color $color-primary
        transition color $animation-time
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        text-transform none

        img
          height 25px
          vertical-align sub
          margin-right 10px

        a
          color $color-primary
          transition color $animation-time

          &:hover
            color lighten($color-primary, 40%)

    .buttons
      width 100%
      text-align center

      &__container
        display table
        width 100%
        height 100%

      &__wrapper
        display table-cell
        vertical-align middle

      &__item
        display inline-block
        font-size 1.2em
        font-weight bold
        font-family $font-text
        margin $global-margin $global-padding 0
        text-align center
        transition color $animation-time
        border-radius $global-radius
        color $color-tertiary

        &:hover
          text-decoration underline
          color lighten($color-tertiary, 5%)

          i
            color lighten($color-tertiary, 5%)

        i
          margin-right 10px
          font-size 1.5em
          display inline-block
          color $color-tertiary
          text-align center
          transition color $animation-time
          vertical-align text-top

      &__text
        display none
        text-decoration underline

        @media screen and (min-width: 768px)
          display inline-block

    .meta
      padding-top $global-margin
      color lighten($color-primary, 50%)
      display inline

      &__date
        font-size 14px
        a
          text-decoration none
          color $color-primary
          font-weight bold
          text-transform uppercase

          &:hover
            text-decoration underline

      &__description
        font-size 1.1em
        line-height 1.3em
        color $color-primary
        padding $global-padding 0 0
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
