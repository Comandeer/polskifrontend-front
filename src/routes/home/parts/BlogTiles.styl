@import "../../../styles/globals.styl"
@import "../../../styles/variables.styl"
@import "../../../styles/colors.styl"

.container
  padding 0 $global-padding $global-margin
  background transparent

  @media screen and (min-width: 768px)
    padding 0 0 $global-margin

  &__wrapper
    width 100%
    float left
    box-sizing border-box
    margin $global-margin 0 0

    &:nth-child(2)
      margin-top $global-margin * 1.5

    @media screen and (min-width: 992px)
      width calc(50% - 20px)

      &:nth-child(3)
        margin-top $global-margin * 1.5

      &:nth-child(even)
        margin-right $global-padding + 5px

      &:nth-child(odd)
        margin-left $global-padding + 5px

  &__blog
    padding 0
    background transparent
    border-radius $global-radius

  .title
    padding 0 0 $global-padding
    text-align center
    border-bottom 2px solid lighten($color-primary, 85%)
    font-size 20px

    &__favicon
      height 26px
      vertical-align text-bottom
      margin-right 10px

    &__link
      color $color-tertiary
      text-decoration none
      transition color $animation-time
      &:hover
        color lighten($color-tertiary, 5%)

  &__clear
    clear both
