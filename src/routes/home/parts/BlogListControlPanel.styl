@import "../../../styles/globals.styl"
@import "../../../styles/variables.styl"
@import "../../../styles/colors.styl"

.container
  width 100%
  box-sizing border-box
  padding 0
  margin $global-margin * 1.5 auto 0

  .wrapper
    float left

    &--left
      width 60%
      float left
      text-align left

      @media screen and (min-width: 768px)
        width 65%

    &--right
      width 40%
      float left
      text-align right

      @media screen and (min-width: 768px)
        width 35%

    &__submit
      font-weight bold
      display inline-block
      padding $global-padding * 0.75
      background $color-secondary
      color $color-tertiary
      border 3px solid $color-tertiary
      border-radius $global-radius
      margin-right 10px
      text-decoration none
      transition background $animation-time

      @media screen and (min-width: 768px)
        padding $global-padding ($global-padding * 2)

      &:hover
        background $color-tertiary
        color $color-secondary

      &:active
        background $color-secondary

      &--disabled
        border 3px solid lighten($color-primary, 60%)
        background $color-secondary
        color lighten($color-primary, 60%)
        pointer-events none
        cursor default

        &:hover
          border 3px solid lighten($color-primary, 60%)
          background $color-secondary
          color lighten($color-primary, 60%)

      i
        font-size 20px
        margin-right 10px
        vertical-align top

    &__search
      width 50%
      vertical-align middle

    &__link
      display inline-block
      padding $global-padding * 0.75
      background $color-secondary
      border 3px solid $color-tertiary
      color $color-tertiary
      margin-left $global-padding * 0.75
      border-radius $global-radius
      transition background $animation-time

      @media screen and (min-width: 768px)
        padding $global-padding ($global-padding * 2)
        margin-left $global-padding

      &:hover
        background $color-tertiary
        color $color-secondary

      i
        font-size 20px

      &--disabled
        border 3px solid lighten($color-primary, 60%)
        background $color-secondary
        color lighten($color-primary, 60%)
        pointer-events none
        cursor default

        //&:hover
        //  border 3px solid lighten($color-primary, 60%)
        //  background $color-secondary
        //  color lighten($color-primary, 60%)

      &--active
        color lighten($color-primary, 50%)
        background $color-secondary
        border 3px solid lighten($color-primary, 50%)
        pointer-events none
        cursor default

        &:hover
          background $color-tertiary

  &__clear
    clear both
