@import "../../styles/colors.styl"
@import "../../styles/variables.styl"

.container
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  display none
  text-align center
  z-index 1000

  &--visible
    display table

  &__background
    position absolute
    top 0
    left 0
    background $color-primary
    opacity 0.7
    width 100%
    height 100%

  .wrapper
    position relative
    display table-cell
    vertical-align middle

    .panel
      max-width 500px
      width 100%
      margin 0 auto

      &__buttons
        text-align center

      &__button
        margin $global-padding ($global-padding / 2)

        &--cancel
          background lighten($color-primary, 50%)
          border 1px solid lighten($color-primary, 50%)
