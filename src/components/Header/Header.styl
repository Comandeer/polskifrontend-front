@import "../../styles/colors.styl"
@import "../../styles/variables.styl"

.header
  background $color-primary
  height $header-height
  width 100%
  border-bottom 3px solid $color-tertiary
  text-align center
  position fixed
  top 0
  left 0
  right 0

  &__link
    text-decoration none

  &__title
    margin 0
    padding 0
    color $color-secondary
    font-size 2.6rem
    line-height 60px

